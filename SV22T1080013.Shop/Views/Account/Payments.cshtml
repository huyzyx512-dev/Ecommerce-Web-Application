@{
    ViewData["Title"] = "Payments";
}

<div class="flex-1 flex justify-center py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl w-full flex flex-col lg:flex-row gap-8">
        <!-- Thay thế toàn bộ phần aside cũ bằng dòng này -->
        @await Html.PartialAsync("_AccountSidebar", null, new ViewDataDictionary(ViewData) { { "ActivePage", "Payments" } })

        <main class="flex-1 min-w-0 flex flex-col gap-6">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 pb-4 border-b border-border-color">
                <div class="flex flex-col gap-2">
                    <h2 class="text-3xl md:text-4xl font-black tracking-tight text-white">Payment Methods</h2>
                    <p class="text-text-muted">Secure payment options for your orders</p>
                </div>
                <button class="px-6 py-2.5 bg-primary text-background-dark font-bold rounded-lg shadow-lg hover:bg-primary-hover transition-all flex items-center gap-2">
                    <span class="material-symbols-outlined">add_card</span>
                    Add Payment Method
                </button>
            </div>

            <div class="flex flex-col gap-5">
                <!-- Visa Card -->
                <div class="bg-surface-dark border border-border-color rounded-xl p-6 flex flex-col sm:flex-row sm:items-center justify-between gap-6 hover:border-primary/50 transition-colors">
                    <div class="flex items-center gap-5">
                        <div class="size-14 rounded-lg bg-gradient-to-br from-blue-700 to-blue-900 flex items-center justify-center text-white text-2xl font-bold shadow-md">
                            VISA
                        </div>
                        <div>
                            <p class="text-white font-medium">Visa •••• 4242</p>
                            <p class="text-sm text-text-muted">Expires 12/28</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <span class="px-3 py-1 text-xs font-bold bg-emerald-900/40 text-emerald-400 rounded-full border border-emerald-500/30">Default</span>
                        <button class="text-sm text-primary hover:text-primary-hover">Edit</button>
                        <button class="text-sm text-red-400 hover:text-red-300">Remove</button>
                    </div>
                </div>

                <!-- Mastercard -->
                <div class="bg-surface-dark border border-border-color rounded-xl p-6 flex flex-col sm:flex-row sm:items-center justify-between gap-6 hover:border-primary/50 transition-colors">
                    <div class="flex items-center gap-5">
                        <div class="size-14 rounded-lg bg-gradient-to-br from-orange-600 to-red-700 flex items-center justify-center text-white text-xl font-bold shadow-md">
                            MC
                        </div>
                        <div>
                            <p class="text-white font-medium">Mastercard •••• 5678</p>
                            <p class="text-sm text-text-muted">Expires 09/27</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="px-4 py-1.5 bg-surface-highlight border border-primary/40 text-primary rounded-lg text-sm hover:bg-primary/20 transition-colors">
                            Set as Default
                        </button>
                        <button class="text-sm text-primary hover:text-primary-hover">Edit</button>
                        <button class="text-sm text-red-400 hover:text-red-300">Remove</button>
                    </div>
                </div>

                <!-- PayPal -->
                <div class="bg-surface-dark border border-border-color rounded-xl p-6 flex flex-col sm:flex-row sm:items-center justify-between gap-6 hover:border-primary/50 transition-colors">
                    <div class="flex items-center gap-5">
                        <div class="size-14 rounded-lg bg-[#0070BA] flex items-center justify-center text-white font-bold shadow-md">
                            PP
                        </div>
                        <div>
                            <p class="text-white font-medium">PayPal • alex.chen...</p>
                            <p class="text-sm text-text-muted">Linked since 2022</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="px-4 py-1.5 bg-surface-highlight border border-primary/40 text-primary rounded-lg text-sm hover:bg-primary/20 transition-colors">
                            Set as Default
                        </button>
                        <button class="text-sm text-red-400 hover:text-red-300">Unlink</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>