@model Supplier
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/SaveData" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" name="@nameof(Model.SupplierName)" class="form-control" autofocus value="@Model.SupplierName">
                @Html.ValidationMessage(nameof(Model.SupplierName))
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" name="@nameof(Model.ContactName)" class="form-control" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" name="@nameof(Model.Phone)" class="form-control" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="@nameof(Model.Email)" class="form-control" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email))
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" name="@nameof(Model.Address)" class="form-control" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address))
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="form-control" asp-for="Province" asp-items="await SelectListHelper.Provinces()"></select>
                @* <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">-- Chọn Tỉnh/thành --</option>
                    @foreach (var province in await SV22T1080013.BusinessLayers.CommonDataService.ProvinceDB.ListAsync())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected>@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select> *@
                <span asp-validation-for="Province"></span>
            </div>

            <div class="form-group">
                @Html.ValidationMessage("Error")
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>
