@model ProductSearchCondition
@{
    ViewBag.Title = "Lập đơn hàng";
}
<div class="box box-primary">
    <div class="box-body">

        <!-- Tìm kiếm, hiển thị và chọn hàng đưa vào giỏ -->
        <div class="col-md-4">
            <!-- Form tìm kiếm mặt hàng -->
            <h4>Lựa chọn hàng cần bán</h4>
            <form id="formSearchProducts" action="~/Order/SearchProduct" method="post" data-result="#searchProductResult">
                <input type="hidden" asp-for="PageSize"/>
                <input type="hidden" asp-for="CategoryID" />
                <input type="hidden" asp-for="SupplierID" />
                <input type="hidden" asp-for="MinPrice" />
                <input type="hidden" asp-for="MaxPrice" />
                <div class="input-group">
                    <input type="text" asp-for="SearchValue"
                           class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
            
            <!--Hiển thị danh sách mặt hàng-->
            <div id="searchProductResult">
            </div>
        </div>

        <!-- Thông tin giỏ hàng, khách hàng -->
        <div class="col-md-8">
            <!-- Giỏ hàng -->
            <h4>Danh sách mặt hàng đã chọn</h4>

            <!--Hiển thị danh sách giỏ hàng-->
            <div id="cart"></div>
       
            <div class="text-right">
                <a href="~/Order/ClearCart" class="btn btn-sm btn-danger clear-cart" onclick="return confirm('Có muốn xóa giỏ hàng không?')">
                    <i class="fa fa-trash"></i> Xóa giỏ hàng
                </a>
            </div>

            <!-- Nhập khách hàng, nhân viên phụ trách và khởi tạo đơn hàng -->
            <form action="~/Order/Init" method="post" class="form-horizontal">
                <h4>Thông tin về khách hàng và địa chỉ giao hàng</h4>
                <div class="form-group">
                    <label class="control-label col-sm-2">Khách hàng:</label>
                    <div class="col-sm-10">
                        <select id="customerID" class="form-control" name="customerID" asp-items="await SelectListHelper.Customers()">
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Tỉnh/thành:</label>
                    <div class="col-sm-10">
                        <select id="deliveryProvince" class="form-control select2" name="deliveryProvince" asp-items="await SelectListHelper.Provinces()">
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ nhận hàng:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="deliveryAddress" id="deliveryAddress" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fa fa-plus-circle"></i> Lập đơn hàng
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(function () {
            // 1. Tìm kiếm sản phẩm (khi submit form tìm kiếm hoặc bấm nút phân trang)
            function searchProduct(page) {
                var $form = $("#formSearchProducts");
                var data = $form.serializeArray();
                data.push({ name: "page", value: page });

                $.ajax({
                    url: $form.prop("action"),
                    method: $form.prop("method"),
                    data: data,
                    success: function (html) {
                        $($form.data("result")).html(html); // #searchProductResult
                    }
                });
            }

            // Submit form tìm kiếm
            $("#formSearchProducts").on("submit", function (e) {
                e.preventDefault();
                searchProduct(1); // luôn tìm từ trang 1 khi bấm tìm
            });

            // 2. Thêm vào giỏ hàng (các form được load động bằng AJAX → phải dùng .on)
            $(document).on("submit", ".formAddToCart", function (e) {
                e.preventDefault();

                var url = $(this).prop("action");
                var method = $(this).prop("method");
                var submitData = $(this).serializeArray();

                $.ajax({
                    url: url,  
                    type: method,
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res.code ===1) {
                            getCart();
                        }else {
                            alert(res.message);
                        }
                    },
                });
            });


            // 3. Xóa sản phẩm khỏi giỏ (nếu bạn muốn xóa bằng AJAX luôn)
            $(document).on("click", ".remove-item", function (e) {
                e.preventDefault();

                $.get(this.href, function () {
                    getCart(); // reload lại giỏ
                });
            });

            // 4. Load giỏ hàng khi vào trang
            function getCart() {
                $.get("/Order/GetCart", function (data) {
                    $("#cart").html(data);
                });
            }

            // 5. Xóa toàn bộ giỏ hàng
            $(document).on("click", ".clear-cart", function (e) {
                e.preventDefault();

                $.ajax({
                    url: this.href,           // ~/Order/ClearCart
                    method: "GET",            // hoặc POST nếu bạn đổi action thành [HttpPost]
                    success: function () {
                        getCart();            // reload lại phần giỏ hàng (hiển thị "Giỏ hàng trống")
                    },
                    error: function () {
                        alert("Có lỗi khi xóa giỏ hàng!");
                    }
                });
            });

            // 6. Sự kiện onchange khi đổi khách hàng
            $(document).on("change", "#customerID", function (e) {
                e.preventDefault(); 

                var customerId = $(this).val();
                //lấy customer theo id từ api
                $.ajax({
                    url: `/api/customer/${customerId}`,
                    type: "get",
                    success: function (res) {
                        if (res.code === 1) {
                            //Lấy dữ liệu từ api gán cho province và address
                            $("#deliveryProvince").val(res.data.province);
                            $("#deliveryAddress").val(res.data.address);
                        } else {
                            alert(res.message);
                        }
                    }
                });
            });

            // Khởi chạy lần đầu
            searchProduct(1);
            getCart();
        });
    </script>
}