@model ProductEditModel
@{

}

<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin mặt hàng</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveData" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductID"/>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autofocus asp-for="ProductName">
                    <span asp-validation-for="ProductName"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" asp-for="ProductDescription"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="CategoryID" asp-items="await SelectListHelper.Categories()">
                    </select>
                    <span asp-validation-for="CategoryID"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="SupplierID" asp-items="await SelectListHelper.Suppliers()">
                    </select>
                    <span asp-validation-for="SupplierID"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Unit">
                    <span asp-validation-for="Unit"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control inputmask-numeric" asp-for="Price">
                    <span asp-validation-for="Price"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label><input type="checkbox" value="true" @nameof(Model.IsSelling) checked>Hiện đang được bán</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="hidden" asp-for="Photo"/>
                    <input type="file" class="form-control" accept="image/*" asp-for="UploadPhoto"
                           onchange="document.getElementById('imgPhoto').src = window.URL.createObjectURL(this.files[0])"  />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="imgPhoto" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>

<!--Phần thuộc tính ảnh-->
<div class="box box-info">
    <div class="box-header with-border ">
        <h3 class="box-title">Thư viện ảnh</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-gray">
                    <th>Ảnh</th>
                    <th>Mô tả/tiêu đề</th>
                    <th>Thứ tự hiển thị</th>
                    <th>Ẩn ảnh</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/Product/Photo/@Model.ProductID?method=add">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in await SV22T1080013.BusinessLayers.ProductDataService.ProductDB.ListPhotosAsync(@Model.ProductID))
                {
                    <tr>
                        <td style="vertical-align:middle">
                            <img src="~/images/products/@item.Photo" alt="MacBookPro" style="width:100px" />
                        </td>
                        <td style="vertical-align:middle;">
                            @item.Description
                        </td>
                        <td style="vertical-align:middle;">@item.DisplayOrder</td>
                        <td style="vertical-align:middle;">@item.IsHidden</td>
                        <td style="vertical-align:middle; text-align:right">
                            <a class="btn btn-xs btn-primary" href="~/Product/Photo/@item.ProductID?method=edit&photoId=@item.PhotoID">
                                <i class="fa fa-edit"></i>
                            </a>
                            <button type="button" class="btn btn-xs btn-danger"
                                    onclick="deletePhoto(@item.PhotoID, @item.ProductID, this)">
                                <i class="fa fa-remove"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--Hiển thị thuộc tính sản phẩm-->
<div class="box box-info">
    <div class="box-header with-border ">
        <h3 class="box-title">Thuộc tính của mặt hàng</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-gray">
                    <th>Tên thuộc tính</th>
                    <th>Giá trị thuộc tính</th>
                    <th>Thứ tự hiển thị</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/Product/Attribute/@Model.ProductID?method=add">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in await SV22T1080013.BusinessLayers.ProductDataService.ProductDB.ListAttributesAsync(Model.ProductID))
                {
                    <tr>
                        <td style="vertical-align:middle">@item.AttributeName</td>
                        <td style="vertical-align:middle;">@item.AttributeValue</td>
                        <td style="vertical-align:middle;">@item.DisplayOrder</td>
                        <td style="vertical-align:middle; text-align:right">
                            <a class="btn btn-xs btn-primary" href="~/Product/Attribute/@Model.ProductID?method=edit&attributeId=@item.AttributeID">
                                <i class="fa fa-edit"></i>
                            </a>
                            <button type="button" class="btn btn-xs btn-danger"
                                    onclick="deleteAttribute(@item.AttributeID, @Model.ProductID, this)">
                                <i class="fa fa-remove"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer text-center">
    </div>
</div>

@section Scripts {
    <script>
        // XÓA ẢNH – HOẠT ĐỘNG 100%
        function deletePhoto(photoId, productId, button) {
            if (!confirm('Xóa ảnh này của mặt hàng?')) return;

            fetch(`/Product/Photo/${productId}?method=delete&photoId=${photoId}&ajax=true`, {
                method: 'GET'
            })
            .then(response => {
                if (!response.ok) throw new Error('Network error');
                return response.json();
            })
            .then(result => {
                if (result.success) {
                    button.closest('tr').remove();
                    alert('Đã xóa ảnh thành công!');
                } else {
                    alert('Xóa thất bại!');
                }
            })
            .catch(err => {
                console.error(err);
                alert('Lỗi hệ thống! Vui lòng thử lại.');
            });
        }

        // XÓA THUỘC TÍNH – HOẠT ĐỘNG 100%
        function deleteAttribute(attributeId, productId, button) {
            if (!confirm('Xóa thuộc tính này của mặt hàng?')) return;

            fetch(`/Product/Attribute/${productId}?method=delete&attributeId=${attributeId}&ajax=true`, {
                method: 'GET'
            })
            .then(response => response.json())  
            .then(result => {
                if (result.success) {
                    button.closest('tr').remove();
                    alert('Đã xóa thuộc tính thành công!');
                } else {
                    alert('Xóa thất bại!');
                }
            })
            .catch(() => alert('Lỗi hệ thống!'));
        }
    </script>
}