@model Category
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/SaveData" method="POST">
            <input type="hidden" asp-for="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" autofocus asp-for="@Model.CategoryName">
            </div>

            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" class="form-control" asp-for="@Model.Description">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>
